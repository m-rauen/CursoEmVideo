Algoritmo "DESAFIO_PA"

Var
A,R:real
C:inteiro


Inicio
      escreva("Por favor, informe o algarismo inicial da P.A.: ")
      leia(A)
      escreva("Por favor, informe a razão dessa P.A.: ")
      leia(R)
      para C := 1 ate 10 faca
           escreva(A)
           A := A+R
      fimpara






Fimalgoritmo